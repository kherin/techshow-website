---
import "../styles/global.css";
import Config from "../../config.json";
---

<nav class="shadow flex items-center flex-wrap bg-white-50">
  <div class="flex items-center flex-shrink-0 text-gray-900 mr-6">
    <img
      class="p-3"
      style="position:relative"
      src="../img/logo_374x281.svg"
      height="150px"
      width="150px"
      alt=""
    />
  </div>
  <div class="block lg:hidden">
    <button
      class="flex items-center px-3 py-2 border rounded text-gray-900 border-white hover:text-gray-200 hover:border-gray-200"
    >
      <svg
        class="h-3 w-3 fill-current"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
      >
        <title>Menu</title>
        <path d="M0 3h20v2H0zM0 9h20v2H0zM0 15h20v2H0z"></path>
      </svg>
    </button>
  </div>
  <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
    <div class="text-lg lg:flex-grow space-x-20">
      {
        Config.routes.map(({ label, path }) => {
          return (
            <a
              href={path}
              class="font-jetbrains block mt-4 lg:inline-block lg:mt-0 text-black hover:text-yellow-400 mr-4"
            >
              {label}
            </a>
          );
        })
      }
    </div>
  </div>
</nav>
